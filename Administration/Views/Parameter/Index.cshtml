<link rel="stylesheet" href="~/Scripts/datatables.net-bs/css/dataTables.bootstrap.css">
<script src="~/Scripts/angular/trNgGrid.min.js"></script>
<script src="~/Scripts/angular/Administration/parameterApp.js"></script>
<script src="~/Scripts/angular/serverUrl.js"></script>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Parameters
            @*<small>advanced tables</small>*@
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Parameters</a></li>
            <li class="active">@*Data tables*@</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content" ng-app="app" ng-controller="parameterController" ng-init="init()">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <button class="ng-binding btn btn-success" type="button" ng-click="addModel()"><i class="fa fa-plus"></i> Add</button>
                    </div>
                    <form class="form-horizontal">
                        <div class="box-body">
                            <div class="row form-group">
                                <div class="col-xs-2">
                                    <label for="sType" class="control-label">Type</label>
                                </div>
                                <div class="col-xs-3">
                                    <input type="text" id="sType" class="form-control" placeholder="Type" ng-model="sType">
                                </div>
                                <div class="col-xs-2">
                                </div>
                                <div class="col-xs-2">
                                    <label for="sName" class="control-label">Name</label>
                                </div>
                                <div class="col-xs-3">
                                    <input type="text" id="sName" class="form-control" placeholder="Name" ng-model="sName">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-xs-2">
                                    <label for="sstatus" class="control-label">Used State</label>
                                </div>
                                <div class="col-xs-3">
                                    <select class="form-control" id="sstatus" ng-model="sStatus" ng-options="item.Value as item.Name for item in Status">
                                        <option value="" selected>----- All -----</option>
                                    </select>
                                </div>
                                <div class="col-xs-7">
                                    <button type="submit" class="btn btn-info" ng-click="search()"><i class="fa fa-search"></i> Search</button>
                                    <button class="btn btn-default" type="button" ng-hide="(sType === null || sType === undefined || sType === '') && (sName === null || sName === undefined || sName === '') && (sStatus === '' || sStatus === undefined || sStatus === '')" ng-click="clear()"><i class="fa fa-refresh"></i> Reset</button>
                                </div>
                            </div>
                        </div><!-- /.box-body -->
                    </form>
                    <p ng-hide="Items.length > 0">There are record not found.</p>
                    <div class="box-body" ng-show="Items.length > 0" style="overflow:auto;">
                        <table class="table-striped angular-grid" tr-ng-grid="" items="Items" page-items="pageSize" total-items="Total" on-data-required="GenerateData(currentPage, pageItems)">
                            <thead>
                                <tr>
                                    <th display-name="TYPE" enable-filtering="false" enable-sorting="false"></th>
                                    <th display-name="NAME" enable-filtering="false" enable-sorting="false"></th>
                                    <th display-name="VALUE" enable-filtering="false" enable-sorting="false"></th>
                                    <th display-name="ORDER NO" enable-filtering="false" enable-sorting="false"></th>
                                    <th display-name="USEDSTATE" enable-filtering="false" enable-sorting="false"></th>
                                    <th enable-filtering="false" enable-sorting="false"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><p>{{gridItem.TYPE}}</p></td>
                                    <td><p>{{gridItem.NAME}}</p></td>
                                    <td><p>{{gridItem.VALUE}}</p></td>
                                    <td><p>{{gridItem.ORDER_NO}}</p></td>
                                    <td><p>{{gridItem.USEDSTATE_NAME}}</p></td>
                                    <td>
                                        <i class="fa fa-pencil-square" aria-hidden="true" data-toggle="modal" ng-click="editRecord(gridItem)"></i>
                                        <i class="fa fa-trash" aria-hidden="true" ng-click="deleteRecord(gridItem)"></i>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td>
                                        <div class="btn-group" role="group" aria-label="...">
                                            <button type="button" class="btn btn-default" ng-click="setPageSize(10)">10</button>
                                            <button type="button" class="btn btn-default" ng-click="setPageSize(20)">20</button>
                                            <button type="button" class="btn btn-default" ng-click="setPageSize(30)">30</button>
                                        </div>
                                        <span tr-ng-grid-pager=""></span>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                        <div class="clear"></div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
        <!-- Modal -->
        <div id="dialogModal" class="modal fade" role="dialog" data-backdrop="static">
            <div class="modal-dialog">
                <div class="col-md-12">
                    <!-- Horizontal Form -->
                    <div class="box {{IsEdit == false ? 'box-success' : 'box-warning'}}">
                        <form class="form-horizontal" name="user">
                            <div class="box-header with-border">
                                <h3 class="box-title">{{IsEdit == false ? 'Add' : 'Update'}} Parameter</h3>
                            </div><!-- /.box-header -->
                            <!-- form start -->

                            <div class="box-body">
                                <div class="form-group">
                                    <label for="type" class="col-sm-2 control-label">Type</label>
                                    <div class="col-sm-10">
                                        <input type="text" id="type" class="form-control input-sm" placeholder="Type" ng-model="type" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="name" class="col-sm-2 control-label">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" id="name" class="form-control input-sm" placeholder="Name" ng-model="name" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="value" class="col-sm-2 control-label">Value</label>
                                    <div class="col-sm-10">
                                        <input type="number" id="value" class="form-control input-sm" placeholder="Value" ng-model="value" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="order_no" class="col-sm-2 control-label">Order No</label>
                                    <div class="col-sm-10">
                                        <input type="number" id="order_no" class="form-control input-sm" placeholder="Order No" ng-model="order_no" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="status" class="col-sm-2 control-label">Used State</label>
                                    <div class="col-sm-10">
                                        <select class="form-control" id="status" ng-model="status" ng-options="item.Value as item.Name for item in Status" required>
                                            <option value="" selected>Please select</option>
                                        </select>
                                    </div>
                                </div>
                            </div><!-- /.box-body -->
                            <div class="box-footer">
                                <button type="submit" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close"></i> Cancel</button>
                                <button type="submit" class="btn {{IsEdit == false ? 'btn-success' : 'btn-warning'}} pull-right" ng-disabled="(type===null || type=== undefined || type=== '') ||(name===null || name===undefined||name === '') || (value===null || value===undefined||value === '') || (order_no===null || order_no===undefined||order_no === '')||(status=='' || status==undefined)" ng-click="submit()"><i class="fa {{IsEdit == false ? 'fa-plus' : 'fa-pencil-square'}}"></i> {{IsEdit == false ? 'Add' : 'Update'}}</button>
                            </div><!-- /.box-footer -->
                        </form>
                    </div><!-- /.box -->
                </div>
            </div>
        </div>
        <!-- Modal end -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
<!-- DataTables -->
<script src="~/Scripts/datatables.net/js/jquery.dataTables.min.js"></script>
